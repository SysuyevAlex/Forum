

<h1> <%= @topic.name %></h1>
<br/>
<table>
<% for message in @topic.messages %>
<tr name="message_title">
	<td><%= message.name %> </td>
</tr>
<tr name="message_content">
	<td><%= message.content %> </td>	
	<td><%=message.user.name %></td>
	<td><%=message.create_time %></td>
	<% if user_signed_in? && current_user.role==1 %>
	<td> <%=link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %> </td>	
	<% end %>
</tr>

<% end %>

</table>
<%= link_to 'Back', "#{forums_path}/#{@topic.forum_id}" %>

<%=link_to 'New', "#{messages_path}/new?topic=#{@topic.id}"%>



