<table>
	<tr>
		<th width="60%"> Topic Title </th>
		<th width="10%"> Replies </th>
		<th width="10%"> Creator </th>
		<th width="10%"> Creation Time </th>
		<th width="20%"> Last Post </th>
	</tr>
	<% for topic in @forum.topics %>	
	<tr>
		<td id="topic_cell"> <%=link_to h(topic.name), topic_path(topic.id), :id=>"topic_name"%></td>
		<td id="topic_cell"> <%= topic.messages.count %> </td>
		<td id="topic_cell"><%=topic.user.name %></td>
		<td id="topic_cell"><%=topic.create_time %></td>
		<td id="topic_cell"><%=topic.last_edit%></td>		
		<% if user_signed_in? && current_user.role==1 %>
		<td id="topic_cell">
		<%=link_to "Edit", edit_topic_path(topic) %> <br/>
		<%=link_to "Destroy", topic, :confirm => 'Are you sure?', :method => :delete %> 
		</td>
		<% end %>		
	</tr>
	<%end %>

</table>

<p><%= link_to 'New Topic', "../topics/new?forum=#{@forum.id}", :id=>"forum_menu" %><br/>
<%= link_to 'Back', forums_path, :id=>"forum_menu" %></p>

