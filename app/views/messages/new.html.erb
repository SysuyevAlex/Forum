<h1>New message</h1>

<%= error_messages_for :message %>

<% form_for (@message, :url=>{:controller=>"messages", :action=>"create"}) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>	
  <p>
  id=<%=current_user.id %>
  </p>
  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>
	
	<input type="hidden" id="message_topic_id" name="message[user_id]" value="<%=current_user.id %>" />	
	<input type="hidden" id="message_time" name="message[create_time]" value="<%=Time.now %>" />	
	<input type="hidden" id="message_topic_id" name="message[topic_id]" value="<%=params[:topic] %>" />
  <p>
    <%= f.submit "Create"%>
  </p>
  
  
<% end %>

<%= link_to 'Back', "#{topics_path}/#{params[:topic]}" %>
